<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PostWrite">
    <!--상단 안내-->
    <TextView
        android:text="깨끗한 옷을 나누고 교환하는 커뮤니티입니다."
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="사진과 함께 글을 올려주세요."
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!--제목-->
    <TextView
        android:text="제목"
        android:textSize="15dp"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:hint="제목을 입력하세요"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--교환희망장소-->
    <TextView
        android:text="교환 희망 장소"
        android:textSize="15dp"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:hint="교환 희망 장소를 입력하세요"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--글 입력-->
    <EditText
        android:layout_marginTop="20dp"
        android:gravity="top"
        android:textSize="15dp"
        android:hint="글을 입력하세요"
        android:background="@drawable/edittextbox"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <!--이미지-->
    <TextView
        android:text="이미지"
        android:textSize="15dp"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="사진 업로드"
        android:textSize="15dp"
        android:textColor="#000"
        android:backgroundTint="#7AFFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button

            android:text="돌아가기"
            android:backgroundTint="#B1B1B1"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <!--완료 버튼 오른쪽 정렬 위해 뷰 삽입-->
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp" />
        <Button
            android:text="완료"
            android:backgroundTint="#B1B1B1"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>